<%- layout('layouts/boiler') %>
<div class="col-6 m-auto bg-light p-4">
    <form action="/course" method="POST">
        <div class="form-row mb-3">
            <div class="form-group col-md-6">
                <label for="courseName">Course Name</label>
                <input type="text" class="form-control" id="courseName" name="courseName">
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="courseDescription">Description</label>
            <input type="textarea" class="form-control" id="courseDescription" name="courseDescription">
        </div>
        <div class="form-group mb-3">
            <label for="imageUrl">Add Image Url</label>
            <input type="text" class="form-control" id="imageUrl" name="imageUrl">
        </div>
        <div class="form-row mb-3">
           
            <div class="form-group col-md-4 mb-3">
                <label for="courseLevel">Level Of Course</label>
                <select id="courseLevel" class="form-control" name="courseLevel">
                    <option selected>Choose...</option>
                    <option value="Beginner">Beginner</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Advanced">Advanced</option>
                    <option value="Professional">Professional</option>
                </select>
            </div>
            <div class="form-group col-md-4 mb-3">
                <label for="instructor">Instructor</label>
                <select id="instructor" class="form-control" name="instructor">
                    <option selected>Choose...</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="batchDate">Batch</label>
                <input type="date" class="form-control" id="batchDate" name="batchDate">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
