<% layout('layouts/boiler') %>
  <div class="container">

    <div class="row justify-content-center">
      <% course.forEach(course=> { %>
        <div class="card row-3 m-2" style="width: 18rem;">
          <!-- <img class="card-img-top"
            src="https://images.unsplash.com/photo-1513818433747-5f175a60caee?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8aW1nfGVufDB8fDB8fHww"
            alt="Card image cap"> -->

            <img class="card-img-top" src="<%= course.imageUrl %>" alt="Course Image" style="height: 50%;width:10rem; object-fit: contain;" loading="lazy">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> Course Level<%= course.courseLevel %></li>
            <li class="list-group-item"> Instructor <%= course.instructor %></li>
            <li class="list-group-item"> Date : <%= course.batchDate %></li>
          </ul>
          <!-- <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
          </div> -->
        </div>
        <% }); %>
    </div>

  </div>